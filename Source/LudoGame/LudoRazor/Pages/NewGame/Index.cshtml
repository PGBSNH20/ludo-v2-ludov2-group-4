@page
@model LudoRazor.Pages.NewGame.GameModel

@{
    ViewData["Title"] = "New game";
}

<h4>Create new game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameBoard.Name" class="control-label"></label>
                <input asp-for="GameBoard.Name" class="form-control" />
                <span asp-validation-for="GameBoard.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

