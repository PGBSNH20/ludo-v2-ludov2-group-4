@page "{id}"
@using LudoAPI.Data
@using LudoAPI.Models
@using Microsoft.IdentityModel.Tokens
@model LudoRazor.Pages.ChoosePiece.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3>@Model.ValidatePlayer you rolled @Model.die, Choose a piece to move</h3>



<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayName("Id")
        </th>
        <th>
            @Html.DisplayName("Color")
