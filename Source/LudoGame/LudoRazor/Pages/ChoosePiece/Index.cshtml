@page "{gameId}"
@using LudoAPI.Data
@using LudoAPI.Models
@using Microsoft.IdentityModel.Tokens
@model LudoRazor.Pages.ChoosePiece.IndexModel

@{
    ViewData["Title"] = "Choose piece";
}

<br />
<h4>@Model.ValidatePlayer you rolled @Model.Die! Choose a piece to move.</h4>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Piece Id")
            </th>
            <th>
                @Html.DisplayName("Color")
            </th>
            <th>
                @Html.DisplayName("Position")
            </th>

            <th>
                @Html.DisplayName("Steps")
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var piece in Model.CurrentPlayerPieces)
         {
            <tr>
               
                    <td>
                        @Html.DisplayFor(modelItem => piece.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => piece.Color)
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => piece.Position)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => piece.Steps)
                </td>
                @if (!piece.IsDone)
                {
                    <td>
                        <a asp-page="/Movepiece/index" asp-route-gameId="@Model.CurrentGame.Id" asp-route-pieceId="@piece.Id" asp-route-dieValue="@Model.Die" class="btn btn-primary">Move piece</a>
                    </td>
                }
                else
                {
                    <td>
                        <p>Piece is done!</p>
                    </td>
                }
                
                
                
            </tr>
         }
    </tbody>
</table>





